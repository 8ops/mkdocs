app:
  mode: 'dashboard'
  settings:
    global:
    clusterName: "Dashboard for kylin"
    itemsPerPage: 20
    labelsLimit: 3
    logsAutoRefreshTimeInterval: 5
    resourceAutoRefreshTimeInterval: 10
    disableAccessDeniedNotifications: false
  ingress:
    enabled: true
    hosts:
      - dashboard.8ops.top
    ingressClassName: external
    path: /
    tls:
      enabled: true
      secretName: "tls-8ops.top"

auth:
  role: auth
  image:
    repository: hub.8ops.top/google_containers/dashboard-auth
    tag: 1.3.0
  scaling:
    replicas: 1
    revisionHistoryLimit: 2
  containers:
    resources:
      requests:
        cpu: 100m
        memory: 200Mi
      limits:
        cpu: 250m
        memory: 400Mi

api:
  role: api
  image:
    repository: hub.8ops.top/google_containers/dashboard-api
    tag: 1.13.0
  scaling:
    replicas: 1
    revisionHistoryLimit: 2
  containers:
    resources:
      requests:
        cpu: 100m
        memory: 200Mi
      limits:
        cpu: 250m
        memory: 400Mi

web:
  role: web
  image:
    repository: hub.8ops.top/google_containers/dashboard-web
    tag: 1.7.0
  scaling:
    replicas: 1
    revisionHistoryLimit: 2
  containers:
    resources:
      requests:
        cpu: 100m
        memory: 200Mi
      limits:
        cpu: 250m
        memory: 400Mi

metricsScraper:
  enabled: true
  role: metrics-scraper
  image:
    repository: hub.8ops.top/google_containers/dashboard-metrics-scraper
    tag: 1.2.2
  scaling:
    replicas: 1
    revisionHistoryLimit: 2
    resources:
      requests:
        cpu: 100m
        memory: 200Mi
      limits:
        cpu: 250m
        memory: 400Mi

metrics-server:
  enabled: true
  image:
    repository: hub.8ops.top/google_containers/metrics-server
    tag: v0.7.2
  resources:
    limits:
      cpu: 100m
      memory: 128Mi
    requests:
      cpu: 50m
      memory: 64Mi
  args:
    - --kubelet-preferred-address-types=InternalIP
    - --kubelet-insecure-tls

kong:
  enabled: true
  image:
    pullPolicy: IfNotPresent
    repository: hub.8ops.top/google_containers/kong
    tag: "3.8"
  scaling:
    replicas: 1
    revisionHistoryLimit: 2
    resources:
      requests:
        cpu: 100m
        memory: 200Mi
      limits:
        cpu: 250m
        memory: 400Mi

cert-manager:
  enabled: false

nginx:
  enabled: false

