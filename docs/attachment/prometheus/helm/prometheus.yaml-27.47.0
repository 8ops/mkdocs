alertmanager:
  enabled: true

  image:
    repository: hub.8ops.top/quay/prometheus-alertmanager
    tag: v0.29.0

  extraConfigmapMounts:
    - name: template-files
      mountPath: /opt/metadata/templates.d
      configMap: alertmanager-template-files
      readOnly: true

  ingress:
    className: external
    enabled: true
    hosts:
    - host: alertmanager.8ops.top
      paths:
      - path: /
        pathType: Prefix
    tls:
      - secretName: tls-8ops.top
        hosts:
          - alertmanager.8ops.top

  resources:
    limits:
      cpu: 200m
      memory: 256Mi
    requests:
      cpu: 30m
      memory: 32Mi

  persistence:
    enabled: false

  service:
    servicePort: 9093
    type: ClusterIP

configmapReload:
  prometheus:
    enabled: true

    name: configmap-reload
    image:
      repository: hub.8ops.top/quay/prometheus-configmap-reload
      tag: v0.87.0

    resources:
      limits:
        cpu: 30m
        memory: 32Mi
      requests:
        cpu: 30m
        memory: 32Mi

  alertmanager:
    enabled: true

    name: configmap-reload
    image:
      repository: hub.8ops.top/quay/prometheus-configmap-reload
      tag: v0.87.0

    resources:
      limits:
        cpu: 30m
        memory: 32Mi
      requests:
        cpu: 30m
        memory: 32Mi

# kubeStateMetrics:
#   enabled: true

kube-state-metrics:
  enabled: true
  image:
    repository: hub.8ops.top/google_containers/kube-state-metrics
    tag: v2.17.0

  resources:
    limits:
     cpu: 100m
     memory: 128Mi
    requests:
     cpu: 30m
     memory: 32Mi

prometheus-node-exporter:
  enabled: true

  image:
    repository: hub.8ops.top/quay/prometheus-node-exporter
    tag: v1.10.2

  tolerations:
    - operator: "Exists"

  resources:
    limits:
      cpu: 100m
      memory: 128Mi
    requests:
      cpu: 30m
      memory: 32Mi

server:
  image:
    repository: hub.8ops.top/quay/prometheus
    tag: v3.7.3

  extraConfigmapMounts:
    - name: metadata-rules
      mountPath: /opt/metadata/rules.d
      configMap: prometheus-metadata-rules
      readOnly: true
    - name: metadata-hosts
      mountPath: /opt/metadata/hosts.d
      configMap: prometheus-metadata-hosts
      readOnly: true

  extraSecretMounts:
    - name: etcd-certs
      mountPath: /var/run/secrets/kubernetes.io/etcd
      secretName: etcd-certs
      readOnly: true

  ingress:
    enabled: true
    ingressClassName: external
    hosts:
      - prometheus.8ops.top
    path: /
    pathType: Prefix
    tls:
      - secretName: tls-8ops.top
        hosts:
          - prometheus.8ops.top

  resources:
    limits:
      cpu: 2000m
      memory: 2048Mi
    requests:
      cpu: 500m
      memory: 512Mi

  persistentVolume:
    enabled: false

  service:
    enabled: true
    servicePort: 9090
    type: ClusterIP

prometheus-pushgateway:
  enabled: true
  image:
    repository: hub.8ops.top/quay/prometheus-pushgateway
    tag: v1.11.2

  ingress:
    enabled: true
    ingressClassName: external
    hosts:
      - pushgateway.8ops.top
    path: /
    pathType: Prefix
    tls:
      - secretName: tls-8ops.top
        hosts:
          - pushgateway.8ops.top

  resources:
    limits:
      cpu: 100m
      memory: 128Mi
    requests:
      cpu: 30m
      memory: 32Mi

  persistentVolume:
    enabled: false

serverFiles:
  prometheus.yml:
    rule_files:
      - /opt/metadata/rules.d/*.yml

