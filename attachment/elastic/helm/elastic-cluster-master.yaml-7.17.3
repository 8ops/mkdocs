clusterName: "elastic-cluster"
nodeGroup: "master"

roles:
  master: "true"
  ingest: "false"
  data: "false"

image: hub.8ops.top/elastic/elasticsearch
imageTag: 7.17.3

replicas: 3

esJavaOpts: "-Xmx1g -Xms1g"

resources:
  requests:
    cpu: "500m"
    memory: "1536Mi"
  limits:
    cpu: "500m"
    memory: "1536Mi"

persistence:
  enabled: true

volumeClaimTemplate:
  storageClassName: elastic-cluster-master
  accessModes: ["ReadWriteOnce"]
  resources:
    requests:
      storage: 30Gi

protocol: http

